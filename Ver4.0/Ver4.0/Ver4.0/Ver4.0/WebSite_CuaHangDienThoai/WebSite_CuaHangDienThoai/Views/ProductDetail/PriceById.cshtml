
@model WebSite_CuaHangDienThoai.Models.tb_ProductDetail


@if (ViewBag.txt != null)
{
    if (Model.PriceSale > 0)
    {
        <div class="product_price">@WebSite_CuaHangDienThoai.Common.Common.FormatNumber(Model.Price, 0)₫   <span> @WebSite_CuaHangDienThoai.Common.Common.FormatNumber(Model.PriceSale, 0)₫</span></div>
        <div style="display:none;" class="in_product_price"> @Model.PriceSale</div>
    }
    else
    {
<div class="product_price">@WebSite_CuaHangDienThoai.Common.Common.FormatNumber(Model.Price, 0)₫</div>
        <div style="display:none;" class="in_product_price"> @Model.Price</div>
    }
}
else
{
    <p class="text-danger">Không có bảng ghi nào !!!</p>
}

